<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ViedoAsyncAvalonia.Views.CreateRoomWindow"
		xmlns:vm="clr-namespace:ViedoAsyncAvalonia.ViewModels"
		x:DataType="vm:CreateRoomViewModel"
        Title="CreateRoomWindow">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center">创建房间</TextBlock>
		<TextBox Grid.Row="1" Name="备注" Watermark="请输入20字以内备注..." Margin="0,10,0,0" Text="{Binding Note}"/>
		<Button Grid.Row="2" Content="提交" HorizontalAlignment="Right" Margin="0,20,0,0" Command="{Binding CreateRoomCommand}" IsEnabled="True"/>
	</Grid>
</Window>
